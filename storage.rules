rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Función para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Función para verificar si el usuario es dueño del documento
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Reglas para archivos de templates
    match /templates/{templateId}/{fileName} {
      // Cualquiera puede leer los archivos de templates
      allow read: if true;
      // Solo usuarios autenticados pueden subir archivos
      allow write: if isAuthenticated();
    }

    // Reglas para archivos de usuarios
    match /users/{userId}/{fileName} {
      // Cualquiera puede leer los archivos públicos de usuarios
      allow read: if true;
      // Solo el dueño puede subir archivos
      allow write: if isAuthenticated() && isOwner(userId);
    }
  }
}
